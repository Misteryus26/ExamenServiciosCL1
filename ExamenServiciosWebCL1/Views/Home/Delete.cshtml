@model ExamenServiciosWebCL1.Models.Alumno

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que quieres borrar al siguiente alumno?</p>
<p><strong>@Model.Nombre @Model.Apellido</strong> con el DNI: (@Model.DNI)</p>

<form asp-action="ConfirmedDelete">
    <input type="hidden" asp-for="Id" />
    
    <button type="submit" class="btn btn-danger">Sí, Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>